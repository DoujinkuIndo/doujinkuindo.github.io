      &lt;th&gt;&lt;strong&gt;Database Name&lt;/strong&gt;&lt;/th&gt;
    &lt;/tr&gt;
  &lt;/thead&gt;
  &lt;tbody&gt;
    &lt;tr&gt;
      &lt;td&gt;wonderful-project-1&lt;/td&gt;
      &lt;td&gt;192.168.56.101&lt;/td&gt;
      &lt;td&gt;1234&lt;/td&gt;
      &lt;td&gt;wonderful-project-1.dev&lt;/td&gt;
      &lt;td&gt;wonderful-project-1&lt;/td&gt;
    &lt;/tr&gt;
    &lt;tr&gt;
